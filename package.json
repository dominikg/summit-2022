{
	"name": "summit-2022-kit",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"prepare": "husky install",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --ignore-unknown . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --ignore-unknown --write ."
	},
	"devDependencies": {
		"@fontsource/cooper-hewitt": "^4.5.3",
		"@fontsource/fira-mono": "^4.5.9",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"eslint": "^8.16.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"sanitize.css": "^13.0.0",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0-beta.1"
	},
	"lint-staged": {
		"*": [
			"prettier --ignore-unknown --write",
			"eslint --ignore-path .gitignore --fix"
		]
	},
	"type": "module"
}
